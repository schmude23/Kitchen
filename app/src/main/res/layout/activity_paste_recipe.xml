<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasteRecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include android:id="@+id/main_toolbar"
            layout="@layout/main_toolbar"/>

        <EditText
            android:id="@+id/paste_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Title                                                                               Prep Time # minute (# hour)                                                       Total Time # minutes (# hours)                                                                                          Servings # (#-#)                                                                                 Course (type)                                                                          Cuisine South-African                                                                                         Ingredients                                                                               # unit, details                                                                                   1 Avocado, pitted                                                           Directions                                                                  First direction goes on this line                                                                                                                   Second direction starts when enter is pressed and a new line is created "
            android:inputType="textMultiLine"
            android:textColor="?attr/editTextColor"
            android:textColorHint="?attr/editTextColor"
            app:backgroundTint="?attr/editTextColor" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddRecipeClicked"
            android:text="Add Recipe"
            android:textColor="?attr/buttonTextColor"/>
    </LinearLayout>
</ScrollView>